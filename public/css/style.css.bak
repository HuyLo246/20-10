body {
    font-family: 'Arial', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #ffebee;
}

.question-container {
    text-align: center;
    position: relative;
    padding: 40px;
    background-color: white;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    max-width: 500px;
    width: 90%;
}

h1 {
    color: #e91e63;
    margin-bottom: 30px;
}

.btn {
    padding: 12px 30px;
    margin: 10px;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    transition: all 0.3s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}

.yes-btn {
    background-color: #4CAF50;
    color: white;
}

.no-btn {
    background-color: #f44336;
    color: white;
    position: absolute;
    transition: all 0.3s ease;
}

.heart-loader {
    display: none;
    font-size: 50px;
    color: #e91e63;
    margin: 20px 0;
    animation: pulse 1.5s infinite;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

.result-container {
    display: none;
    margin-top: 20px;
    animation: fadeIn 1s;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.result-gif {
    max-width: 100%;
    border-radius: 10px;
    margin: 20px auto;
    display: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}
